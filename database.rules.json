{
  "rules": {
    ".read": "auth != null",
    ".write": "false",
    "users": {
      ".indexOn": "email",
      "$uid": {
        ".write": "auth.uid===$uid",
        "pendingInvites": {
          ".write": "auth !== null"
        },
        "lastUpdatedTimestamp": {
          ".write": "auth !== null"
        }
      }
    },
    "projects": {
      "$projectID": {
        ".write": "root.child('projects').child($projectID).child('permissions').child(auth.uid).val()===true || root.child('projects').child($projectID).child('owner').val()===auth.uid"
      }
    },
    "messages": {
      "$messengerID": {
        ".write": "root.child('projects').child($messengerID).child('permissions').child(auth.uid).val()===true||root.child('projects').child($messengerID).child('owner').val()===auth.uid||(root.child('messages').child($messengerID).child('project').exists()&&root.child('projects').child(root.child('messages').child($messengerID).child('project').val()).child('permissions').child(auth.uid).val()===true)||(root.child('messages').child($messengerID).child('project').exists()&&root.child('projects').child(root.child('messages').child($messengerID).child('project').val()).child('owner').val()===auth.uid)"
      }
    }
  }
}
